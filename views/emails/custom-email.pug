  tr
    td(align='center' valign='top')
      table(style="margin:0;width:80%;margin:0 auto;border-bottom:1px dashed #dadada")
        tbody
          tr
            td(style="text-align:center")
              br
              p
                a Ш
                  span(style={color: 'green'}) ++
              br
      table(border='0' cellpadding='20' cellspacing='0' width='600')
        tr
          td
            div(style=`margin:0;padding:0;font-family:"Proxima Nova","proxima-nova",Helvetica,Arial,sans-serif"`)
              p Здравствуйте, #{name}!
              br
              block content
              br
              p Описание: #{event_data.description}
              br
              if location
                p Адрес: #{event_data.location}
                br
            block reason
            br
            block buttons
